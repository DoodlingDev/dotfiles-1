[alias]
  aa = add --all
  car = commit --amend --no-edit
  cm = commit -m
  co = checkout
  dc = diff --word-diff --cached --color-words
  df = diff --word-diff --color-words
  dsf = "!f() { [ \"$GIT_PREFIX\" != \"\" ] && cd "$GIT_PREFIX"; git diff --color $@ | diff-so-fancy | less --tabs=4 -RFX; }; f"
  fall = fetch --all
  mup = !git checkout master && git pull && git checkout -
  pl = pull
  ps = push
  ril = !git rebase -i $(git rev-parse --abbrev-ref --symbolic-full-name @{u})
  sl = log --oneline --decorate --graph -20
  sla = log --oneline --decorate --graph --all -20
  uncommit = reset --soft HEAD^
  unstage = reset
  upstream = rev-parse --abbrev-ref --symbolic-full-name @{u}
[color]
  ui = auto
[core]
  excludesfile = ~/.gitignore
  autocrlf = input
[merge]
  ff = only
[push]
  default = upstream
[fetch]
  prune = true
[gitsh "color"]
  default = cyan
[gitsh]
  defaultcommand = status -sb
  gitcommand = hub
  nogreeting = true
  prompt = "\n%D %c(%b%#)%w âžœ"
[user]
  name = Chris Toomey
  email = chris@ctoomey.com
  signingkey = Chris Toomey <chris@ctoomey.com>
